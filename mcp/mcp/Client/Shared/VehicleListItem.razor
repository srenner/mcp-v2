@using mcp.Shared.ViewModels

<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card mb-2">
        <div class="card-header">
            <h4>
                <NavLink class="nav-link" href="@VehicleLink" Match="NavLinkMatch.All">@Vehicle.Name</NavLink>
            </h4>
        </div>
        <div class="card-body">
            <div class="small">
                @Vehicle.ModificationCount modification@(Vehicle.ModificationCount == 1 ? "" : "s"), @Vehicle.ProjectCount project@(Vehicle.ProjectCount == 1 ? "" : "s")
            </div>
        </div>
    </div>
</div>



@code {

    [Parameter]
    public VehicleListItemViewModel Vehicle { get; set; }

    public string VehicleLink
    {
        get
        {
            return "/vehicle/" + Vehicle.VehicleID;
        }
    }
}
